<?xml version="1.0" encoding="UTF-8"?>
<!-- 测试环境 Logback 配置 -->
<!-- 此文件用于单元测试，不依赖 Spring Profile -->
<configuration scan="true" scanPeriod="30 seconds">
    <!-- 引入Spring Boot默认配置 -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- 敏感信息脱敏转换器 -->
    <conversionRule conversionWord="msg"
                    converterClass="org.smm.archetype.config.logging.DesensitizingConverter"/>

    <!-- CONSOLE Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} | %thread | %X{traceId:--} | %X{spanId:--} | %-5level | %logger{36} | %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 日志路径默认值 -->
    <property name="LOG_PATH" value=".logs"/>

    <!-- FILE Appender -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/app.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/app-%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} | %thread | %X{traceId:--} | %X{spanId:--} | %-5level | %logger{36} | %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 异步日志 - ASYNC_FILE -->
    <appender name="ASYNC_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>2048</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <neverBlock>true</neverBlock>
        <appender-ref ref="FILE"/>
    </appender>

    <!-- CURRENT Appender -->
    <appender name="CURRENT" class="ch.qos.logback.core.FileAppender">
        <file>${LOG_PATH}/current.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} | %thread | %X{traceId:--} | %X{spanId:--} | %-5level | %logger{36} | %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 异步日志 - ASYNC_CURRENT -->
    <appender name="ASYNC_CURRENT" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>2048</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <neverBlock>true</neverBlock>
        <appender-ref ref="CURRENT"/>
    </appender>

    <!-- ERROR_FILE Appender -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/error.log</file>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/error-%d{yyyy-MM-dd}.log</fileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} | %thread | %X{traceId:--} | %X{spanId:--} | %-5level | %logger{36} | %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 审计日志 - AUDIT_FILE (180天保留) -->
    <appender name="AUDIT_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/audit.log</file>
        <append>true</append>
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>INFO</level>
            <onMatch>ACCEPT</onMatch>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/audit-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>180</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} | %thread | %-5level | %logger{36} | %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root Logger 配置 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ERROR_FILE"/>
        <appender-ref ref="ASYNC_FILE"/>
        <appender-ref ref="ASYNC_CURRENT"/>
        <appender-ref ref="AUDIT_FILE"/>
    </root>

    <!-- 领域层和应用层日志级别 -->
    <logger name="org.smm.archetype.domain" level="DEBUG"/>
    <logger name="org.smm.archetype.app" level="DEBUG"/>
</configuration>
