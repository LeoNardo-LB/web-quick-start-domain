<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
        "-//Checkstyle//DTD SuppressionFilter Configuration 1.2//EN"
        "https://checkstyle.org/dtds/suppressions_1_2.dtd">

<!--
    Checkstyle Suppressions 配置
    用于豁免特定代码的检查

    规则：尽量修复问题，仅对无法通过简单修改解决的问题进行豁免
-->
<suppressions>
    <!-- 测试代码豁免 -->
    <suppress checks="MissingJavadocMethod|MissingJavadocType" files=".*[/\\]test[/\\].*\.java$"/>
    <!-- 测试方法命名风格（允许下划线分隔） -->
    <suppress checks="MethodName" files=".*[/\\]test[/\\].*\.java$"/>
    <!-- 测试代码行长度和缩进豁免 -->
    <suppress checks="LineLength|Indentation" files=".*[/\\]test[/\\].*\.java$"/>
    <!-- 测试代码导入豁免 -->
    <suppress checks="UnusedImports" files=".*[/\\]test[/\\].*\.java$"/>

    <!-- 生成的代码豁免 -->
    <suppress checks=".*" files=".*[/\\]generated[/\\].*\.java$"/>
    <suppress checks=".*" files=".*Generated\.java$"/>

    <!--
        链式调用缩进豁免
        Builder 模式的链式调用缩进风格与 Checkstyle 的严格规则不兼容
        这些代码格式是合理的，豁免缩进检查
    -->
    <suppress checks="Indentation" files=".*SearchServiceImpl\.java$"/>
    <suppress checks="Indentation" files=".*LocalOssClientImpl\.java$"/>

    <!--
        圈复杂度豁免
        MIME 类型转换方法需要处理大量类型，圈复杂度不可避免
        方法已添加 @SuppressWarnings 注解
    -->
    <suppress checks="CyclomaticComplexity" files=".*FileMetaConverter\.java$" lines="110"/>

    <!--
        注释代码中的行长度豁免
        这些是被注释掉的旧代码，不影响实际功能
    -->
    <suppress checks="LineLength" files=".*RustFsOssClientImpl\.java$" lines="56"/>
    <suppress checks="LineLength" files=".*ElasticsearchClientImpl\.java$" lines="100,175"/>
    <suppress checks="LineLength" files=".*EventKafkaConfigure\.java$" lines="65"/>
</suppressions>
